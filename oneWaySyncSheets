function syncSheets() {
  // ЁЯФ╣ Source ржУ Destination Sheet ID ржмрж╕рж╛ржУ
  var sourceSheetId = '1ud6hgl-VvbbO1fcQti11PENWVfX65-CJ449RL6ItRrI';       // рждрзЛржорж╛рж░ Source Sheet ржПрж░ ID
  var destinationSheetId = '1nUQ3-IciWWfaacAE6E0PzYrw2eJCKW9WoyTgm751gFg'; // рждрзЛржорж╛рж░ Destination Sheet ржПрж░ ID
  
  // ЁЯФ╣ Sheet ржирж╛ржо ржмрж╕рж╛ржУ (ржпрзЗржЯрж╛ ржирж┐ржЪрзЗ ржЯрзНржпрж╛ржмрзЗ ржжрзЗржЦрж╛ ржпрж╛рзЯ)
  var sourceSheetName = 'Sheet1';
  var destinationSheetName = 'Sheet1';
  
  // ЁЯФ╣ Source Sheet ржерзЗржХрзЗ ржбрзЗржЯрж╛ ржЖржирзЛ
  var source = SpreadsheetApp.openById(sourceSheetId).getSheetByName(sourceSheetName);
  var destination = SpreadsheetApp.openById(destinationSheetId).getSheetByName(destinationSheetName);
  
  // ЁЯФ╣ ржбрзЗржЯрж╛ ржХржкрж┐ ржХрж░рзЛ
  var data = source.getDataRange().getValues();
  
  // ЁЯФ╣ ржкрзБрж░ржирзЛ ржбрзЗржЯрж╛ ржорзБржЫрзЗ ржирждрзБржи ржбрзЗржЯрж╛ ржмрж╕рж╛ржУ
  destination.clearContents();
  destination.getRange(1, 1, data.length, data[0].length).setValues(data);
  
  // ЁЯФ╣ рж╕ржлрж▓рждрж╛рж░ рж▓ржЧ
  Logger.log("тЬЕ Data synced successfully!");
}
